{
  "functions": {
    "api/fetch-latest.js": {
      "maxDuration": 10
    },
    "api/merged-trackers.js": {
      "maxDuration": 10
    },
    "api/cron-backup.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/fetch-latest"
    },
    {
      "source": "/latest",
      "destination": "/api/fetch-latest"
    },
    {
      "source": "/trackers",
      "destination": "/api/merged-trackers"
    },
    // === 新增这条规则，用于触发备份 ===
    {
      "source": "/api/cron-backup",
      "destination": "/api/cron-backup"
    }
  ]
}
